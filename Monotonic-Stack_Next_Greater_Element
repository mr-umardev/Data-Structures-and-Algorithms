#include<bits/stdc++.h>
using namespace std;
    vector<int>nextGreaterElement(vector<int>&nums){
        int n=nums.size();
        vector<int>result(n,-1);
        stack<int>s;
        for(int i=0;i<n;++i){
            while(!s.empty() && nums[s.top()]<nums[i]){
                result[s.top()]=nums[i];
                s.pop();
            }
            s.push(i);
        }
        return result;
    }
int main(){
    vector<int>arr={4,5,2,10,8};
    vector<int>result=nextGreaterElement(arr);
    for(int num:result){
        cout<<num<<" ";
    }
    cout<<endl;
    return 0;
}
